<!DOCTYPE html>
<html>
<title>W3.CSS</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<body>

  <div class="w3-container">
    <h2>Buscador restaurantes</h2>

    <div class="w3-card-4">
      <div class="w3-container w3-brown">
        <h2>Formulario de b√∫squeda</h2>
      </div>
      <form class="w3-container" action="/">
        <p>
          <label class="w3-text-brown"><b>Identificador de restaurante</b></label>
          <input class="w3-input w3-border w3-sand" name="restaurant_id" type="text">
        </p>
        <p>
          <label class="w3-text-brown"><b>Barrio del restaurante</b></label>
          <input class="w3-input w3-border w3-sand" name="borough" type="text">
        </p>
        <p>
          <label class="w3-text-brown"><b>Nombre del restaurante</b></label>
          <input class="w3-input w3-border w3-sand" name="nombre" type="text">
        </p>
        <p>
          <button class="w3-btn w3-brown">Buscar</button>
        </p>
        
      </form>
    </div>


    <div class="w3-container">
      <% restaurants.forEach(function(restaurant) { %>
        <div class="w3-card-4 w3-panel w3-half">
          <header class="w3-container w3-brown">
            <h1>
              <%= restaurant.name %>
            </h1>
          </header>
          <div class="w3-container">
            <p>
              <%= restaurant.cuisine %>
            </p>
          </div>
          <footer class="w3-container w3-brown">
            <h5>Indetificador del restaurante: <strong>
                <%= restaurant.restaurant_id %>
              </strong></h5>
          </footer>
        </div>
        <% }) %>

    </div>
  </div>

</body>

</html>